<div id="customer-new-project-form">
  <form action method="post">
    <div class="form-group">
      <label for="type"><b>Тип вашей работы:</b></label>
      <input type="text" id="type" class="form-control" max-length="50" min-length="5" name="type"
        placeholder="Тип вашей работы" required>
    </div>
    <div class="form-group">
      <label for="title"><b>Название:</b></label>
      <input type="text" id="title" class="form-control" max-length="50" min-length="5" name="title"
        placeholder="Название вашей работы" required>
    </div>
    <div class="form-group">
      <label for="description"><b>Описание:</b></label>
      <textarea id="description" class="form-control" rows="3" max-length="1000" min-length="5" name="description"
        placeholder="Описание вашей работы" required></textarea>
    </div>
    <div class="form-group">
      <label for="deadline"><b>Срок:</b></label>
      <input type="date" id="deadline" class="form-control" name="deadline" required>
    </div>
    <div class="form-group">
      <label for="file"><b>Файлы:</b></label>
      <input type="file" id="file" class="form-control" name="file" accept="">
    </div>
    <input type="text" id="category-id" name="category-id" style="visibility: hidden;">
    <button>Сделать заказ</button>
  </form>
</div>
